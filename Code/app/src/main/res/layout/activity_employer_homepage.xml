<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">



        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.tabs.TabItem
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/Home"
                android:text="Home" />

            <com.google.android.material.tabs.TabItem
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                android:id="@+id/ListingHistory"
                android:text="Listing"/>

            <com.google.android.material.tabs.TabItem
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Chat"
                android:id="@+id/chat"/>

            <com.google.android.material.tabs.TabItem
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/profileButton"
                android:text="Profile" />

            <com.google.android.material.tabs.TabItem
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/Logout"
                android:clickable="true"
                android:text="Logout"  />
        </com.google.android.material.tabs.TabLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollIndicators="right"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="insideInset"
            android:verticalScrollbarPosition="right"
            android:visibility="visible"
            tools:context="com.CSCI.a3130_group_6.EmployerPackage.EmployerHomepage">


            <SearchView
                android:id="@+id/searchBar"
                android:layout_width="263dp"
                android:layout_height="48dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="162dp"
                android:layout_marginEnd="19dp"
                android:clickable="true"
                android:focusable="true"
                android:inputType="text"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/addTaskButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <ListView
                android:id="@+id/employeeList"
                android:layout_width="405dp"
                android:layout_height="311dp"
                android:layout_marginStart="6dp"
                android:isScrollContainer="true"
                android:nestedScrollingEnabled="true"
                android:scrollIndicators="right"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                android:smoothScrollbar="true"
                android:verticalScrollbarPosition="right"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/employeeHeader" />

            <TextView
                android:id="@+id/employeeHeader"
                android:layout_width="411dp"
                android:layout_height="19dp"
                android:clickable="false"
                android:text="Available Workers In Your Area"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/employeeList"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/searchBar"
                app:layout_constraintVertical_bias="0.678" />


            <Button
                android:id="@+id/addTaskButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="162dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:onClick="addTaskSwitch"
                android:text="Add Task"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/searchBar"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>